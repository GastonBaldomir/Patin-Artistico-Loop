<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Loop_Patin</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Loop_Patin.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
       <nav class="navbar navbar-expand-lg navbar-light sticky-top py-3">
           <div class="container">
              <a asp-controller="Home" asp-action="Index"  class="navbar-brand d-flex align-items-center gap-2" >
                  <svg fill="none" height="32" style="color: var(--primary-coral);" viewBox="0 0 48 48" width="32" xmlns="http://www.w3.org/2000/svg">
                        <span class="material-symbols-outlined fs-2"></span>
                  </svg>
                   <span class="fw-bolder fs-4">Loop Academy</span>
              </a>
              <button class="navbar-toggler" data-bs-target="#navbarNav" data-bs-toggle="collapse" type="button">
                    <span class="navbar-toggler-icon"></span>
              </button>
                <div class="collapse navbar-collapse " id="navbarNav">
                        <ul class="navbar-nav mx-auto justify-content-between">
                            <li class="nav-item"><a class="nav-link px-3 fw-semibold" href="#">Clases</a></li>
                            <li class="nav-item"><a class="nav-link px-3 fw-semibold" href="#">Sedes</a></li>
                            <li class="nav-item"><a class="nav-link px-3 fw-semibold" href="#">Nosotros</a></li>
                        </ul>                
                    <ul class="navbar-nav ms-auto d-flex flex-column flex-lg-row align-items-start align-items-lg-center">
                        
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                            <li class="nav-item mb-2 mb-lg-0 ms-lg-3">
                                <a class="nav-link btn btn-outline-primary rounded-pill px-3 px-lg-4"
                                   asp-controller="Profile"
                                   asp-action="Index">
                                    Mi Perfil
                                </a>
                            </li>
                            <li class="nav-item mb-2 mb-lg-0 ms-lg-3">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Admin" asp-action="Index" class="nav-link">
                                        <span class="material-symbols-outlined">admin_panel_settings</span>
                                        Admin
                                    </a>
                                }else{ <span class="btn btn-outline-primary rounded-pill px-3 px-lg-4">
                                    Hola! 👋 @* @User.Identity.Name *@
                                    </span>}
                               
                                </li>
                            <li class="nav-item mb-2 mb-lg-0 ms-lg-3">
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-primary rounded-pill px-3 px-lg-4">
                                            Cerrar sesión
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item ms-lg-3">
                                <a class="flex-column flex-lg-row btn btn-outline-primary rounded-pill px-4"
                                       asp-controller="Account"
                                       asp-action="Login">
                                        Iniciar sesión
                                    </a>
                                </li>
                            <li class="flex-column flex-lg-row nav-item ms-lg-3" ">
                                <a class="btn btn-outline-primary rounded-pill px-4"
                                    asp-controller="Account"
                                    asp-action="Register">Registrarse
                                </a>
                             </li>
                            }
                        </ul>
                </div>
           </div>           
        </nav>  
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Loop_Patin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
