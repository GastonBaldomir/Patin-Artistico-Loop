@model List<Usuario>
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Panel de Administración - Escuela de Patín</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
@{
    ViewData["Title"] = "Listado de Alumnas";
}


<div class="d-flex justify-content-between align-items-center m-4">
    <h1 class="fw-black mb-0">Listado de Alumnas</h1>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-light d-flex align-items-center fw-bold">
        <span class="material-symbols-outlined me-1" style="font-size: 1.2rem;">arrow_back</span>
        Volver
    </a>
</div>

<div class="card border-0 shadow-sm mb-5">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="px-4 py-3 text-uppercase small fw-bold bg-light">Nombre</th>
                    <th class="px-4 py-3 text-uppercase small fw-bold bg-light">Dni</th>
                    <th class="px-4 py-3 text-uppercase small fw-bold bg-light ">Fecha De Nacimiento</th>
                    <th class="px-4 py-3 text-uppercase small fw-bold bg-light ">Categoria</th>
                    <th class="px-4 py-3 text-uppercase small fw-bold bg-light ">Ver Más</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td class="px-4 py-3 fw-medium">@usuario.Nombre @usuario.Apellidos</td>
                        <td class ="px-4 py-3 fw-medium">@usuario.Dni</td>
                        <td class="px-4 py-3 fw-medium">
                            @(usuario.FechaNacimiento.HasValue? usuario.FechaNacimiento.Value.ToShortDateString() : "-")
                        </td>
                        <td>
                            <form asp-action="AsignarCategoria" method="post" class="d-flex">
                                <input type="hidden" name="usuarioId" value="@usuario.Id" />

                                <select name="categoriaId" class="form-select form-select-sm">
                                    <option value="">-- Sin categoría --</option>
                                    @foreach (var cat in ViewBag.Categorias)
                                    {
                                        <option value="@cat.Id"
                                                selected="@(usuario.CategoriaId == cat.Id)">
                                            @cat.Nombre
                                        </option>
                                    }
                                </select>

                                <button type="submit" class="btn btn-sm btn-outline-secondary ms-2">
                                    ✔
                                </button>
                            </form>
                        </td>
                        <td class="px-4 py-3 fw-medium">
                            <a asp-action="Index"asp-controller="Profile" asp-route-id="@usuario.Id" class="btn btn-outline-secondary btn-sm d-flex align-items-center fw-bold text-uppercase">
                                <span class="material-symbols-outlined me-1" style="font-size: 1rem;">visibility</span>
                                Datos Personales </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>