@model Loop_Patin.Models.ViewModels.ProfileViewModel
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Perfil de Usuario - Escuela de Patín</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <link href="~/css/Profile.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<div class="container py-5">
    <div class="mb-4">
        <h1 class="h3 fw-bold mb-1">Configuración del Perfil</h1>
        <p class="text-muted">Administra tu información personal y preferencias de la cuenta.</p>
    </div>
    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="row g-0">
            <div class="col-lg-4 bg-light border-end">
                <div class="card-body p-5 text-center">
                    <div class="profile-picture-container mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.FotoUrl)
                                                                 ? "/img/perfil-avatar-hombre-icono-redondo_24640-14044.jpg"
                                                                 : Model.FotoUrl)"
                             class="img-thumbnail rounded-circle"
                             alt="Foto de perfil" />
                        <button class="btn-camera shadow-sm">
                            <span class="material-symbols-outlined">photo_camera</span>
                        </button>
                    </div>
                    <h4 class="fw-bold mb-1">@Model.Nombre @Model.Apellidos</h4>
                    <p class="text-primary-custom fw-semibold mb-4">Alumno Avanzado</p>
                    <div class="text-start">
                        <div class="sidebar-item d-flex justify-content-between align-items-center shadow-sm">
                            <div class="d-flex align-items-center gap-2">
                                <span class="material-symbols-outlined text-primary">calendar_today</span>
                                <span class="text-muted small">@Model.FechaRegistro?.ToString("dd/MM/yyyy")</span>
                            </div>
                            <span class="small fw-bold">Mar 2023</span>
                        </div>
                        <div class="sidebar-item d-flex justify-content-between align-items-center shadow-sm">
                            <div class="d-flex align-items-center gap-2">
                                <span class="material-symbols-outlined text-primary">verified</span>
                                <span class="text-muted small">Estado</span>
                            </div>
                            <span class="badge badge-active rounded-pill px-3">ACTIVO</span>
                        </div>
                    </div>
                    <div class="mt-5">
                        <p class="text-muted fst-italic small">Última actualización: hace 2 días</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="container my-5">
                    <form asp-action="Edit" method="post">
                        <div class="row g-4">

                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label fw-medium"></label>
                                <input asp-for="Nombre" class="form-control py-2" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Apellidos" class="form-label fw-medium"></label>
                                <input asp-for="Apellidos" class="form-control py-2" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-medium"></label>
                                <input asp-for="Email" class="form-control py-2" readonly />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label fw-medium"></label>
                                <input asp-for="Telefono" class="form-control py-2" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FechaNacimiento" class="form-label fw-medium"></label>
                                <input asp-for="FechaNacimiento" type="date" class="form-control py-2" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Dni" class="form-label fw-medium"></label>
                                <input asp-for="Dni" class="form-control py-2" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FotoUrl" class="form-label">URL de la foto</label>
                                <input asp-for="FotoUrl" class="form-control " />
                                <span asp-validation-for="FotoUrl" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Descripcion" class="form-label fw-medium"></label>
                                <textarea asp-for="Descripcion" class="form-control py-2"></textarea>
                            </div>
                        </div>
                        <hr class="my-5 opacity-10" />                           
                        <div class="d-flex flex-column flex-sm-row justify-content-end gap-3">
                            <a asp-controller="Profile"
                                asp-action="Index" class="btn btn-outline-secondary px-4 fw-medium"> Cancelar
                              </a>
                            <button class="btn btn-save px-5 fw-bold d-flex align-items-center justify-content-center gap-2" type="submit">
                                <span class="material-symbols-outlined fs-5">save</span>
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4 g-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center gap-2 mb-3">
                    <span class="material-symbols-outlined text-primary-custom">lock</span>
                    <h5 class="fw-bold mb-0">Seguridad</h5>
                </div>
                <p class="text-muted small">Protege tu cuenta actualizando tu contraseña periódicamente.</p>
                <a class="text-primary-custom text-decoration-none fw-bold small d-inline-flex align-items-center" href="#">
                    Cambiar contraseña
                    <span class="material-symbols-outlined fs-6 ms-1">chevron_right</span>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center gap-2 mb-3">
                    <span class="material-symbols-outlined text-primary-custom">notifications</span>
                    <h5 class="fw-bold mb-0">Notificaciones</h5>
                </div>
                <p class="text-muted small">Configura cómo deseas recibir las novedades de la escuela.</p>
                <a class="text-primary-custom text-decoration-none fw-bold small d-inline-flex align-items-center" href="#">
                    Gestionar preferencias
                    <span class="material-symbols-outlined fs-6 ms-1">chevron_right</span>
                </a>
            </div>
        </div>
    </div>
</div>
    </div>
</html>