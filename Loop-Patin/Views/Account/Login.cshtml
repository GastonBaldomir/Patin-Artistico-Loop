@model Loop_Patin.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Skating School Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />   
</head>
<body>  
    <main class="container my-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">
                <div class="card login-card p-4 p-md-5">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="icon-circle">
                                <span class="material-symbols-outlined fs-2">ice_skating</span>
                            </div>
                            <h2 class="fw-bold mb-1">Bienvenidos!</h2>
                            <p class="text-muted small">Inicia sesión para ingresar a la plataforma.</p>
                        </div>
                         <form asp-action="Login" asp-controller="Account" method="post">
                            <div class="mb-3">
                                <label class="form-label fw-semibold small" for="username">Usuario</label>
                                <div class="input-group">
                                    <input asp-for="Email" class="form-control form-control-lg" id="username" placeholder="Email" required="" type="text" />
                                    <span class="input-group-text bg-white text-muted">
                                        <span class="material-symbols-outlined">person</span>
                                    </span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold small" for="password">Contraseña</label>
                                <div class="input-group">
                                    <input asp-for="Password" class="form-control form-control-lg" id="password" placeholder="Contraseña" required="" type="password" />
                                    <button class="btn btn-outline-secondary border-start-0" type="button">
                                        <span class="material-symbols-outlined">visibility</span>
                                    </button>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" id="rememberMe" type="checkbox" />
                                    <label class="form-check-label small" for="rememberMe">
                                        Recuerdame
                                    </label>
                                </div>
                                <a class="text-decoration-none small fw-bold" href="#" style="color: var(--primary-soft-red)">Olvidaste la contraseña?</a>
                            </div>
                            <button class="btn btn-primary btn-lg w-100 rounded-3 mb-4" type="submit">Log In</button>
                            <div class="text-center pt-3 border-top">
                                <p class="text-muted small mb-0">
                                    No tenés cuenta?
                                    <a class="fw-bold text-decoration-none" asp-controller="Account"
                                       asp-action="Register" style="color: var(--primary-soft-red)">Registrate!</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <div class="accent-badge badge-blue">
                        <span class="material-symbols-outlined fs-6">ac_unit</span>
                        Elite Training
                    </div>
                    <div class="accent-badge badge-orange">
                        <span class="material-symbols-outlined fs-6">workspace_premium</span>
                        Award Winning
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">© 2021 Loop Academy. All rights reserved.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>