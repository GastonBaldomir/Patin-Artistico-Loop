@using Loop_Patin.Models.ViewModels
@model CategoriaIndexViewModel
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Crear Categoría - Escuela de Patín</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/category.css" rel="stylesheet" />
</head>
<body>
    <main class="container">
        <div class="d-flex justify-content-between align-items-center m-4">
            <h1 class="fw-black mb-0">Administrar Categorias</h1>
            <a asp-action="Index" asp-controller="Admin" class="btn btn-light d-flex align-items-center fw-bold">
                <span class="material-symbols-outlined me-1" style="font-size: 1.2rem;">arrow_back</span>
                Volver
            </a>
        </div>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <div class="card border-0 shadow-sm mb-5">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="px-4 py-3 text-uppercase small fw-bold">Nombre de Categoría</th>
                            <th class="px-4 py-3 text-uppercase small fw-bold">Descripción</th>
                            <th class="px-4 py-3 text-uppercase small fw-bold text-center">Operaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Categorias == null || !Model.Categorias.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    No hay categorías cargadas aún
                                </td>
                            </tr>
                        }
                        @foreach (var c in Model.Categorias!)
                        {
                            <tr>
                                <td class="px-4 py-3 fw-medium">@c.Nombre</td>
                                <td class="px-4 py-3 text-muted">@c.Descripcion</td>
                                <td class="px-4 py-3 text-center">
                                    <div class="d-flex justify-content-center gap-2">

                                        <a asp-action="Edit"
                                           asp-route-id="@c.Id"
                                           asp-controller="Categoria"
                                           class="btn btn-outline-primary btn-sm d-flex align-items-center fw-bold text-uppercase">
                                            <span class="material-symbols-outlined me-1" style="font-size: 1rem;">edit</span>
                                            Editar
                                        </a>
                                        <form asp-action="Delete" asp-controller="Categoria" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@c.Id" />

                                            <button type="submit"
                                                    class="btn btn-outline-danger btn-sm d-flex align-items-center fw-bold text-uppercase">
                                                <span class="material-symbols-outlined me-1" style="font-size: 1rem;">delete</span>
                                                Eliminar
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 m-3">
                <div class="card card-decoration-top">
                    <div class="card-body p-4 p-md-5">
                        <div class="d-flex align-items-center gap-3 mb-4">
                            <div class="icon-box">
                                <span class="material-symbols-outlined">category</span>
                            </div>
                            <div>
                                <h1 class="h4 mb-1 fw-bold">Crear Nueva Categoría</h1>
                                <p class="text-muted small mb-0">Complete el formulario para dar de alta un nuevo nivel o disciplina.</p>
                            </div>
                        </div>
                        
                        <form method="post"
                              asp-action="@(Model.Id == null ? "Create" : "Edit")">

                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label fw-semibold small" for="categoryTitle">Título de la Categoría</label>
                                <input asp-for="Nombre" class="form-control form-control-lg fs-6" id="categoryTitle" placeholder="Ej: Patín Carrera - Nivel Inicial" type="text" />
                            </div>
                            <div class="mb-4">
                                <label asp-for="Descripcion" class="form-label fw-semibold small"></label>
                                <textarea asp-for="Descripcion" class="form-control fs-6" rows="5"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="pt-3 border-top d-flex justify-content-end gap-2">
                                <button class="btn btn-outline-secondary px-4" type="button">Cancelar</button>
                                <button class="btn btn-primary px-4" type="submit">
                                    @(Model.Id == null ? "Agregar categoría" : "Guardar cambios")
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="mt-5 text-center">
        <p class="text-muted x-small" style="font-size: 0.75rem;">
            © 2024 Escuela de Patín - Panel de Administración
        </p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>